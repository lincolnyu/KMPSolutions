<Window x:Class="KMPCenter.InvoicingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KMPCenter"
        xmlns:kmpcontrols="clr-namespace:KMPControls;assembly=KMPControls"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="KMP Invoicing" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <kmpcontrols:ClientsControl Name="Clients"></kmpcontrols:ClientsControl>
            <Button Click="GenerateClick">_Generate</Button>
        </StackPanel>
    </Grid>
</Window>
