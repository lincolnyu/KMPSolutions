<Window x:Class="KMPCenter.ClientsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KMPCenter"
        xmlns:kmpcontrols="clr-namespace:KMPControls;assembly=KMPControls"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="KMP Clients" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="59*"/>
            <ColumnDefinition Width="741*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.ColumnSpan="2">
            <kmpcontrols:ClientsControl Name="Clients"></kmpcontrols:ClientsControl>
            <kmpcontrols:GPControl Name="GPs"></kmpcontrols:GPControl>
        </StackPanel>
    </Grid>
</Window>
