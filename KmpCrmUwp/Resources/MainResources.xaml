<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:resources="using:KmpCrmUwp.Resources">
    <Style TargetType="Button" x:Name="BaseButton">
        <Style.Setters>
            <Setter Property="CornerRadius" Value="2" />
        </Style.Setters>
    </Style>
    <Style TargetType="Button" BasedOn="{StaticResource BaseButton}">
        <!-- Global button style -->
        <Style.Setters>
            <Setter Property="CornerRadius" Value="2" />
        </Style.Setters>
    </Style>
    <Style TargetType="Button" x:Key="LargeFontButton" BasedOn="{StaticResource BaseButton}">
        <Style.Setters>
            <Setter Property="FontSize" Value="32" />
        </Style.Setters>
    </Style>
    <resources:DateToStringConverter x:Key="DateConverter"/>
</ResourceDictionary>
